<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ForecastSourceNameStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:gravity">center</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.33</item>
    </style>

    <style name="ForecastColumn">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.3</item>
        <item name="android:padding">6dp</item>

    </style>

    <style name="WeeklyForecastItemLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:lines">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="WeeklyForecastSummaryLabel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">top|left</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:layout_marginBottom">6dp</item>
    </style>

    <style name="WeeklyForecastImage">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginTop">6dp</item>
    </style>
</resources>