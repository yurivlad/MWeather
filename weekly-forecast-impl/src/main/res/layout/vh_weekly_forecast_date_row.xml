<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools">

    <data>

        <import type="com.yurivlad.multiweather.weeklyForecastImpl.WeeklyForecastBindingUtils" />

        <variable
            name="dateRow"
            type="com.yurivlad.multiweather.presenterModel.DateRow" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rect_gray"
            android:gravity="center"
            android:minHeight="32dp"
            android:textStyle="bold"
            android:text="@{WeeklyForecastBindingUtils.createDateLabelText(dateRow.date)}"
            android:textSize="14sp"
            tool:text="12  декабря" />
    </FrameLayout>

</layout>