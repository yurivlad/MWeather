<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/first_forecast"
            style="@style/WeekForecastItem"

            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toTopOf="parent"
            tools:text="Погода солнечная\n5-10 градусов\nветер: 3-4 м/c" />

        <TextView
            android:id="@+id/second_forecast"
            style="@style/WeekForecastItem"
            app:layout_constraintStart_toEndOf="@+id/first_forecast"
            app:layout_constraintTop_toTopOf="parent"

            tools:text="Погода солнечная\n5-10 градусов\nветер: 3-4 v/c" />

        <TextView
            android:id="@+id/third_forecast"
            style="@style/WeekForecastItem"
            app:layout_constraintStart_toEndOf="@+id/second_forecast"
            app:layout_constraintTop_toTopOf="parent"

            tools:text="Погода солнечная\n5-10 градусов\nветер: 3-4 v/c" />

    </LinearLayout>
</HorizontalScrollView>